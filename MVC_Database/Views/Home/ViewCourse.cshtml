@model Course
@{
    ViewData["Title"] = "ViewCourse";
}

<h1>ViewCourse</h1>

<div class="row">
    <div class="col">
        <h5>Course Title</h5>
    </div>
    <div class="col">
        <h5>Description</h5>
    </div>
    <div class="col">
        <h5>Teacher</h5>
    </div>
    <div class="col">
        <h5>Students</h5>
    </div>
    <div class="col">
        <h5>Assignments</h5>
    </div>
</div>

<div class="row">
    <div class="col">
        <p>@Model.Title</p>
    </div>
    <div class="col">
        <p>@Model.Description</p>
    </div>
    <div class="col">
        <h6>Name:</h6>
        <p>@Model.Teacher.Name</p>
        <h6>Office:</h6>
        <p>@Model.Teacher.Office</p>
        <h6>Email:</h6>
        <p>@Model.Teacher.Email</p>
    </div>
    <div class="col">
        @foreach (var student in Model.PersonCourses)
        {
            <h6>Name:</h6>
            <p>@student.Student.Name</p>
            <h6>Email:</h6>
            <p>@student.Student.Email</p>
            <hr />
        }

    </div>
    <div class="col">
        @foreach (var assignment in Model.Assignments)
        {
            <h6>Title:</h6>
            <p>@assignment.Title</p>
            <h6>Description:</h6>
            <p>@assignment.Description</p>
            <hr />
        }

    </div>
</div>