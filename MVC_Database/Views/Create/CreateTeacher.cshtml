@model TeacherViewModel
@{
    ViewData["Title"] = "CreateTeacher";
}

<h1>Create Teacher</h1>

<form asp-action="CreateTeacher" asp-controller="Create" method="post">

    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>
    <br />

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span>
    <br />

    <label asp-for="Office"></label>
    <input asp-for="Office" />
    <span asp-validation-for="Office"></span>
    <br />

    <input type="submit" value="Create" />
</form>