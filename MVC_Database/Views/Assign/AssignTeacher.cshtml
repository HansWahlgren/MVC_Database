@model AssignViewModel
@{
    ViewData["Title"] = "AssignTeacher";
}

<h1>Assign Teacher</h1>
<br />

<form asp-action="AssignTeacher" asp-controller="Assign" method="post">
    <fieldset class="form-group">
        <div class="row">
            @*<legend class="col-form-label col-sm-2 pt-0"></legend>*@
            <div class="col-sm-10">
                <h4>Teacher</h4>
                @foreach (Teacher teacher in Model.TeacherList)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="teaId" id="gridTeacher @teacher.Id" value="@teacher.Id">
                        <label class="form-check-label" for="gridTeacher @teacher.Id">
                            @teacher.Name
                        </label>
                    </div>
                }
            </div>
        </div>
        <br />
        <div class="row">
            @*<legend class="col-form-label col-sm-2 pt-0">Courses</legend>*@
            <div class="col-sm-10">
                <h4>Courses</h4>
                @foreach (Course course in Model.CourseList)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="couId" id="gridCourse @course.Id" value="@course.Id">
                        <label class="form-check-label" for="gridCourse @course.Id">
                            @course.Title
                        </label>
                    </div>
                }
            </div>
        </div>
    </fieldset>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </div>
</form>

